import telebot

# BotFather –¥–∞–Ω –æ–ª–≥–∞–Ω —Ç–æ–∫–µ–Ω–∏–Ω–≥–∏–∑–Ω–∏ —à—É –µ—Ä–≥–∞ “õ—û–π–∏–Ω–≥
TOKEN = "YOUR_BOT_TOKEN"
bot = telebot.TeleBot(TOKEN)

# –û–¥–¥–∏–π –ª—É“ì–∞—Ç (—Å—û–∑–ª–∞—Ä –±–∞–∑–∞—Å–∏)
lugat = {
    "salom": "–ø—Ä–∏–≤–µ—Ç",
    "kitob": "–∫–Ω–∏–≥–∞",
    "olma": "—è–±–ª–æ–∫–æ",
    "dost": "–¥—Ä—É–≥",
    "maktab": "—à–∫–æ–ª–∞"
}

@bot.message_handler(commands=['start'])
def start(message):
    bot.reply_to(message, "Assalomu alaykum! Men lug‚Äòat botiman. So‚Äòz yuboring, tarjima qilib beraman.")

@bot.message_handler(func=lambda message: True)
def translate(message):
    text = message.text.lower()
    if text in lugat:
        bot.reply_to(message, f"üá∫üáø {text} ‚Üí üá∑üá∫ {lugat[text]}")
    else:
        bot.reply_to(message, "Kechirasiz, bu so‚Äòz lug‚Äòatda topilmadi üòî")

bot.polling()


