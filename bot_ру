
import telebot

# BotFather дан олган токенингизни шу ерга қўйинг
TOKEN = "YOUR_BOT_TOKEN"
bot = telebot.TeleBot(TOKEN)

# Оддий луғат (сўзлар базаси)
lugat = {
    "salom": "привет",
    "kitob": "книга",
    "olma": "яблоко",
    "dost": "друг",
    "maktab": "школа"
}

@bot.message_handler(commands=['start'])
def start(message):
    bot.reply_to(message, "Assalomu alaykum! Men lug‘at botiman. So‘z yuboring, tarjima qilib beraman.")

@bot.message_handler(func=lambda message: True)
def translate(message):
    text = message.text.lower()
    if text in lugat:
        bot.reply_to(message, f"🇺🇿 {text} → 🇷🇺 {lugat[text]}")
    else:
        bot.reply_to(message, "Kechirasiz, bu so‘z lug‘atda topilmadi 😔")

